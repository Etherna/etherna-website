{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "types": ["node"],
    "plugins": [
      { "name": "typescript-plugin-css-modules" }
    ],
    "jsx": "preserve",
    "allowJs": true,
    "alwaysStrict": true,
    "skipLibCheck": false,
    "noEmit": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@context/*": ["./src/context/*"],
      "@images/*": ["./src/images/*"],
      "@queries/*": ["./src/queries/*"],
      "@definitions/*": ["./src/definitions/*"],
      "@lang/*": ["./src/lang/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@styles/*": ["./src/styles/*"],
      "@pages/*": ["./src/pages/*"],
      "@templates/*": ["./src/templates/*"],
      "@utils/*": ["./src/utils/*"],
    },
    "typeRoots": [
      "typings/"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": [".cache", "public", "node_modules"]
}