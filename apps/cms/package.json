{
  "name": "cms",
  "version": "1.0.0",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "concurrently \"pnpm:watch\" \"pnpm:start\"",
    "start": "directus start",
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "typecheck": "tsc --noEmit",
    "ci-build": "pnpm migrate:up && pnpm build && pnpm snapshot-apply",
    "watch": "rollup -c rollup.config.ts -w --configPlugin typescript",
    "bootstrap": "directus bootstrap",
    "migrate-up": "pnpm build --migrationsOnly && directus database migrate:latest",
    "migrate-down": "directus database migrate:down",
    "snapshot": "directus schema snapshot ./snapshot.yaml",
    "snapshot-apply": "directus schema apply ./snapshot.yaml"
  },
  "dependencies": {
    "@directus/constants": "11.0.2",
    "@directus/sdk": "14.0.0",
    "@directus/types": "11.0.3",
    "@octokit/rest": "20.0.2",
    "@sendgrid/mail": "8.1.0",
    "axios": "1.6.5",
    "directus": "10.8.3",
    "dotenv": "16.3.2",
    "knex": "3.1.0",
    "pg": "8.11.3",
    "remark-parse": "11.0.0",
    "remark-slate": "1.8.6",
    "slate-blocks": "workspace:*",
    "unified": "11.0.4",
    "vue-i18n": "9.9.0"
  },
  "devDependencies": {
    "@directus/extensions": "0.2.1",
    "@directus/extensions-sdk": "10.3.0",
    "@rollup/plugin-alias": "5.1.0",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-replace": "5.0.5",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "11.1.6",
    "@rollup/plugin-url": "8.0.2",
    "@types/express": "4.17.21",
    "@vitejs/plugin-vue": "5.0.3",
    "@vue/compiler-sfc": "3.4.15",
    "concurrently": "8.2.2",
    "eslint-config-custom": "workspace:*",
    "from": "0.1.7",
    "glob": "10.3.10",
    "rollup": "3.29.4",
    "rollup-plugin-dotenv": "0.5.0",
    "rollup-plugin-esbuild": "5.0.0",
    "rollup-plugin-styles": "4.0.0",
    "rollup-plugin-svg-import": "3.0.0",
    "sass": "1.70.0",
    "tsconfig": "*",
    "url": "0.11.3",
    "vue": "3.4.15"
  }
}
