---
import { Header as LayoutHeader } from "@/components/layout/header"
import { Locale, LocalizedPath } from "@/lang/types"
import { fetchHeader } from "@/queries/fetch-header"

interface Props {
  path: string
  localizedPaths: LocalizedPath[]
  locale: Locale
}

const header = await fetchHeader({
  locale: Astro.props.locale,
})
---

<LayoutHeader
  locale={Astro.props.locale}
  navItems={header.navItems}
  path={Astro.props.path}
  localizedPaths={Astro.props.localizedPaths}
  client:idle
/>
