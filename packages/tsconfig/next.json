{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.JS",
  "extends": "./base.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "bundler",
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "files": ["./global.d.ts"],
  "include": ["src"],
  "exclude": ["node_modules"]
}
