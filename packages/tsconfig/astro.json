{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Astro",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es5"
  },
  "files": ["./global.d.ts"],
  "include": ["src"],
  "exclude": ["node_modules"]
}
